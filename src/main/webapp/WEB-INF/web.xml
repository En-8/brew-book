<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Archetype Created Web Application</display-name>

  <!-- Tell the server to use form-based authentication. -->
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/loginError.jsp</form-error-page>
    </form-login-config>
  </login-config>

  <!-- Protect the create brew page. -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>createBrew</web-resource-name>
      <url-pattern>/createBrew.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>registered_user</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>createBrew</web-resource-name>
      <url-pattern>/createBrew</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>registered_user</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Protect the brews by user page. -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>brewsByUser</web-resource-name>
      <url-pattern>/brewsByUser.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>registered_user</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>brewsByUser</web-resource-name>
      <url-pattern>/brewsByUser</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>registered_user</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Protect the your brews page. -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>yourBrews</web-resource-name>
      <url-pattern>/yourBrews.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>registered_user</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>yourBrews</web-resource-name>
      <url-pattern>/yourBrews</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>registered_user</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Protect the account management page. -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>userAccountManagement</web-resource-name>
      <url-pattern>/accountManagement.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>registered_user</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>userAccountManagement</web-resource-name>
      <url-pattern>/manageAccount</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>registered_user</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Protect the login page. -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>login</web-resource-name>
      <url-pattern>/login</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>registered_user</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Protect everything in the adminOnly directory -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>admin</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <security-role>
    <role-name>admin</role-name>
  </security-role>

  <security-role>
    <role-name>registered_user</role-name>
  </security-role>

</web-app>
